{
  "name": "privacy-first-personal-data-vault",
  "version": "1.0.0",
  "description": "A production-grade Privacy-First Personal Data Vault with encrypted storage and selective disclosure capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=tests/unit --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=tests/integration --detectOpenHandles --forceExit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "npm": "^10.9.3",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ]
  },
  "keywords": [
    "privacy",
    "data-vault",
    "encryption",
    "zero-knowledge",
